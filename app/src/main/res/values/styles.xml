<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" parent="Widget.MaterialComponents.TextView">

    </style>

    <style name="Text.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">65dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Text.ParametersValue">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="Text.ParametersTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_purple</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="Theme.SecretAndroidCourse">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="displayOptions">showTitle|homeAsUp</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.MaterialComponents.Toolbar">
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="navigationIcon">@drawable/ic_back</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorOnSurface">@color/light_brown</item>
        <item name="android:textColorHint">@color/light_brown</item>
    </style>

</resources>